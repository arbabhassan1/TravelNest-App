<% if(success && success.length){ %>
<div
  class="mt-3 alert alert-success alert-dismissible fade show col-md-6 offset-md-3"
  role="alert"
>
  <%= success %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %> <% if(error && error.length){ %>
<div
  class="mt-3 alert alert-danger d-flex align-items-center alert-dismissible fade show col-md-6 offset-md-3"
  role="alert"
>
  <i class="fa-solid fa-triangle-exclamation error"></i>
  <%= error %>
  <button
    type="button"
    class="btn-close"
    data-bs-dismiss="alert"
    aria-label="Close"
  ></button>
</div>

<% } %>
